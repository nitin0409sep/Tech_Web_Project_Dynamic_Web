{{!-- Slider --}}

<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">

        {{!-- Note -: index of the current array item has been available for some time now via @index --}}

        {{#each slides }} {{!-- For dynamic addition of Button --}}
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{@index}}"
            class="{{this.class}}" aria-current=" true" aria-label="Slide 1"></button>
        {{/each}}

    </div>


    <div class="carousel-inner">


        {{#each slides}} {{!-- hbs Iteration Method just like Foreach Loop --}}
        <div class="carousel-item {{this.class}}">
            <img src="{{this.imgUrl}}" class="d-block w-100 slider-img" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{{this.slideTitle}}</h5>
                <p>{{slideSubTitle}}</p>
            </div>
        </div>
        {{/each}}

    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>