{{!-- Service Section --}}

<section id="services_section" class="py-4">
    <div class="container">
        <h1 class="text-center text-secondary">Services that we provide</h1>
        <div class="row mt-5">

            {{#each service}} {{!-- hbs Iteration Method just like Foreach Loop --}}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">

                        {{!-- Icon --}}
                        <div class="container text-center py-3">
                            <i class="{{this.iconUrl}} service_icon text-secondary"></i>
                        </div>

                        {{!-- Title --}}
                        <h5 class="card-title">{{this.title}}</h5>
                        {{!-- Subtitle --}}
                        <p>{{this.subTitle}}</p>

                        <a href="#!">{{this.link}}</a>
                        <a href="{{this.linkText}}" class="ml-3">Support</a>

                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>

</section>